<!--index.wxml-->
<navigation-bar title="" back="{{false}}" color="black" background="#FFF"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 顶部日期卡片 -->
    <view class="date-card">
      <view class="date-header">
        <view class="date-left">
          <text class="date-number">{{day}}</text>
          <text class="date-month">/ {{chineseMonth}}月</text>
        </view>
      </view>
      <text class="date-solar">{{solarTerm}}</text>
      <text class="date-motto">{{motto}}</text>
      <view class="date-content">
        <text>本月推荐：{{recommendFruits}}</text>
        <text>小提示：{{warmTips}}</text>
      </view>
    </view>

    <!-- 月份选择器 -->
    <view class="month-container">
      <view class="month-grid">
        <block wx:for="{{[1,2,3,4,5,6]}}" wx:key="*this">
          <view class="month-btn {{currentMonth === item ? 'active' : ''}}" 
                bindtap="onMonthTap" 
                data-month="{{item}}">
            {{item}}月
          </view>
        </block>
      </view>
      <view class="month-grid">
        <block wx:for="{{[7,8,9,10,11,12]}}" wx:key="*this">
          <view class="month-btn {{currentMonth === item ? 'active' : ''}}" 
                bindtap="onMonthTap" 
                data-month="{{item}}">
            {{item}}月
          </view>
        </block>
      </view>
    </view>
    
    <!-- 水果列表 -->
    <view class="fruits-container">
      <view class="fruit-list">
        <block wx:if="{{seasonalFruits.length > 0}}">
          <view class="fruit-card" wx:for="{{seasonalFruits}}" wx:key="index">
            <view class="fruit-inner">
              <image class="fruit-image" src="{{item.image}}" mode="aspectFill"></image>
              <view class="fruit-info">
                <view class="fruit-name">{{item.name}}</view>
                <view class="fruit-price-container">
                  <text class="fruit-price">{{item.price}}</text>
                  <text class="fruit-unit">{{item.unit}}</text>
                </view>
              </view>
            </view>
          </view>
        </block>
        <view wx:else class="empty-state">
          暂无水果信息
        </view>
      </view>
    </view>
  </view>
</scroll-view>
