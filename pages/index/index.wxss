/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f8fa;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
}

/* 日期卡片样式 */
.date-card {
  background: linear-gradient(135deg, #ffffff, #f5f7fa);
  border-radius: 24rpx;
  padding: 20rpx 30rpx;
  margin: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.date-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.date-left {
  display: flex;
  align-items: flex-start;
}

.date-number {
  font-size: 72rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1;
  margin-right: 5rpx;
}

.date-month {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
  margin-top: 40rpx;
}

.date-solar {
  display: block;
  font-size: 44rpx;
  color: #333333;
  font-weight: 600;
  margin: 16rpx 0;
}

.date-motto {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.date-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.date-content text {
  display: block;
  margin-bottom: 8rpx;
}

/* 月份选择器 */
.month-container {
  margin: 0 24rpx 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.month-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.month-grid:last-child {
  margin-bottom: 0;
}

.month-btn {
  flex: 1;
  height: 50rpx;
  margin: 0 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
  background: #f5f7fa;
  border-radius: 12rpx;
  position: relative;
}

.month-btn.active{
   color: #ffffff;
  background: #4080ff;
  font-weight: 500;
  transition: all 0.3s ease;
}

.month-indicator {
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%) scaleX(0);
  width: 24rpx;
  height: 3rpx;
  background: #4080ff;
  border-radius: 4rpx;
  transition: transform 0.3s ease;
}

.month-btn.active text {
  color: #4080ff;
  font-weight: 600;
  transform: scale(1.1);
}

.month-btn.active .month-indicator {
  transform: translateX(-50%) scaleX(1);
  box-shadow: 0 1rpx 4rpx rgba(64, 128, 255, 0.3);
}

/* 水果列表 */
.fruits-container {
  margin: 0 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.fruit-list {
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
  padding: 20rpx 0;
}

.fruit-item {
  position: relative;
  display: flex;
  padding: 30rpx;
  margin: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.fruit-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 4rpx 16rpx;
  background: #ff6b6b;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.fruit-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 30rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.fruit-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.fruit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.fruit-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.fruit-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: 600;
  white-space: nowrap;
}

.fruit-variety {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.fruit-origin {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.fruit-description {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}