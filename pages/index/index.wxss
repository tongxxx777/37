/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8fafc;
  color: #334155;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 16rpx;
}

.month-selector {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 16rpx 0;
  background: linear-gradient(180deg, #f8fafc 80%, rgba(248, 250, 252, 0));
  backdrop-filter: blur(10px);
}

.month-picker {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 36rpx;
  background: #ffffff;
  color: #334155;
  border-radius: 20rpx;
  width: 260rpx;
  margin: 0 auto;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid #e2e8f0;
}

.month-picker:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(148, 163, 184, 0.1);
}

.current-month {
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 12rpx;
  color: #334155;
}

.picker-arrow {
  font-size: 24rpx;
  color: #64748b;
}

.fruit-list {
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.fruit-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.08);
  border: 1rpx solid #e2e8f0;
  display: flex;
  padding: 24rpx;
  gap: 24rpx;
}

.fruit-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.fruit-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.fruit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.fruit-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.fruit-price {
  font-size: 30rpx;
  color: #0ea5e9;
  font-weight: 600;
}

.fruit-unit {
  font-size: 24rpx;
  color: #94a3b8;
  margin-left: 4rpx;
  font-weight: normal;
}

.fruit-season,
.fruit-nutrition,
.fruit-tips {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.label {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
}

.value {
  font-size: 26rpx;
  color: #334155;
  line-height: 1.5;
}

/* 分页控件样式 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  gap: 20rpx;
}

.page-btn {
  padding: 16rpx 32rpx;
  background: #ffffff;
  color: #334155;
  border-radius: 16rpx;
  font-size: 26rpx;
  box-shadow: 0 2rpx 12rpx rgba(148, 163, 184, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid #e2e8f0;
  font-weight: 500;
}

.page-btn:active {
  transform: translateY(2rpx);
  background: #f8fafc;
}

.page-btn.disabled {
  background: #f1f5f9;
  color: #94a3b8;
  pointer-events: none;
  border-color: #e2e8f0;
}

.page-indicator {
  font-size: 26rpx;
  color: #64748b;
  min-width: 100rpx;
  text-align: center;
  font-weight: 500;
}
