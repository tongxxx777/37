/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}
.scrollarea {
  flex: 1;
  overflow-y: auto;
}

.container {
  padding: 16rpx;
}

/* 顶部日期卡片 */
.date-card {
  margin-bottom: 10rpx;
  padding: 24rpx 32rpx;
  background: #f5f7fa;
  border-radius: 24rpx;
}

.date-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.date-left {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.date-number {
  font-size: 64rpx;
  font-weight: 600;
  color: #333;
  line-height: 1;
}

.date-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding-top: 8rpx;
}

.date-month {
  font-size: 24rpx;
  color: #666;
  font-weight: 400;
}

.date-solar {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-top: 4rpx;
}

.date-motto {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.mood-icon {
  width: 80rpx;
  height: 80rpx;
  margin-top: -10rpx;
}

/* 月份选择器 */
.month-selector {
  margin-bottom: 10rpx;
  display: flex;
  justify-content: center;
  padding: 0 24rpx;
}

.month-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f5f7fa;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  width: 100%;
}

.current-month {
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 水果列表容器 */
.fruits-container {
  background: #f5f7fa;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
}

.fruit-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.fruit-card {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
}

.fruit-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  background: #f8f8f8;
}

.fruit-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 400;
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fruit-card {
  animation: fadeInUp 0.5s cubic-bezier(0.4, 0, 0.2, 1) backwards;
}

.fruit-card:nth-child(3n + 1) {
  animation-delay: 0.1s;
}

.fruit-card:nth-child(3n + 2) {
  animation-delay: 0.2s;
}

.fruit-card:nth-child(3n + 3) {
  animation-delay: 0.3s;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999999;
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 32rpx;
  color: #999999;
  font-size: 24rpx;
}

.fruit-price {
  font-size: 30rpx;
  color: #0ea5e9;
  font-weight: 600;
}

.fruit-unit {
  font-size: 24rpx;
  color: #94a3b8;
  margin-left: 4rpx;
  font-weight: normal;
}

.fruit-season,
.fruit-nutrition,
.fruit-tips {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.label {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
}

.value {
  font-size: 26rpx;
  color: #334155;
  line-height: 1.5;
}

/* 分页控件样式 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  gap: 20rpx;
}

.page-btn {
  padding: 16rpx 32rpx;
  background: #ffffff;
  color: #334155;
  border-radius: 16rpx;
  font-size: 26rpx;
  box-shadow: 0 2rpx 12rpx rgba(148, 163, 184, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid #e2e8f0;
  font-weight: 500;
}

.page-btn:active {
  transform: translateY(2rpx);
  background: #f8fafc;
}

.page-btn.disabled {
  background: #f1f5f9;
  color: #94a3b8;
  pointer-events: none;
  border-color: #e2e8f0;
}

.page-indicator {
  font-size: 26rpx;
  color: #64748b;
  min-width: 100rpx;
  text-align: center;
  font-weight: 500;
}

.tabs {
  display: flex;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #4caf50;
  font-weight: 500;
}

.tab.active::after {
  content: "";
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #4caf50;
  border-radius: 4rpx;
}

/* 状态标签 */
.status-tag {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-good {
  background: #e3f7f3;
  color: #45b787;
}

.status-normal {
  background: #f0f7ff;
  color: #4a9eff;
}

.status-bad {
  background: #fff2f0;
  color: #ff4d4f;
}
