/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8fafc;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
}

/* 日期卡片样式 */
.date-card {
  background: linear-gradient(135deg, #60a5fa, #3b82f6, #2563eb);
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.date-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.date-left {
  display: flex;
  align-items: flex-start;
}

.date-number {
  font-size: 72rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1;
  margin-right: 12rpx;
}

.date-month {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  margin-top: 8rpx;
}

.date-solar {
  display: block;
  font-size: 44rpx;
  color: #ffffff;
  font-weight: 600;
  margin: 16rpx 0;
}

.date-motto {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
}

.date-content {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

.date-content text {
  display: block;
  margin-bottom: 8rpx;
}

/* 月份选择器 */
.month-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  margin: 0 24rpx 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.month-btn {
  width: 16.66%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #475569;
  position: relative;
}

.month-btn.active {
  color: #2563eb;
  font-weight: 500;
}

.month-btn.active::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 24rpx;
  height: 4rpx;
  background: #2563eb;
  border-radius: 4rpx;
}

/* 水果列表 */
.fruits-container {
  margin: 0 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.fruit-list {
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
}

.fruit-card {
  width: 33.33%;
  padding: 8rpx;
  box-sizing: border-box;
}

.fruit-inner {
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.fruit-image {
  width: 100%;
  height: 200rpx;
  background-size: cover;
  background-position: center;
}

.fruit-info {
  padding: 16rpx;
}

.fruit-name {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.fruit-price-container {
  display: flex;
  align-items: baseline;
}

.fruit-price {
  font-size: 32rpx;
  color: #2563eb;
  font-weight: 600;
}

.fruit-unit {
  font-size: 24rpx;
  color: #64748b;
  margin-left: 4rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 64rpx 32rpx;
  color: #64748b;
  font-size: 28rpx;
}