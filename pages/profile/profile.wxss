.container {
  padding: 16rpx;
}

.profile-header {
  background: #f5f7fa;
  padding: 24rpx;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

.school-name {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 600;
}

.location {
  font-size: 28rpx;
  color: #7f8c8d;
}

.data-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.data-item {
  background: #f5f7fa;
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.data-value {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 600;
}

.data-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

.section-title {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
  margin: 24rpx 0 16rpx;
}

.room-list {
  background: #f5f7fa;
  border-radius: 24rpx;
  padding: 8rpx 24rpx;
}

.room-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(127, 140, 141, 0.1);
}

.room-item:last-child {
  border-bottom: none;
}

.room-name {
  font-size: 28rpx;
  color: #2c3e50;
}

.room-status {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}
